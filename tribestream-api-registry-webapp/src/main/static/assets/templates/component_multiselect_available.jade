.tribe-data-tribe-multiselect-available-body.floating-menu(x-ng-class="{ hidden: availableOptions.length === 0 && (!newOpt || !newOpt.trim() )}")
    .opts
        .option(x-ng-repeat="opt in availableOptions | orderBy:getOptionText",
                x-ng-click="selectItem(opt)",
                x-ng-class="{selected: opt === selectedItem}")
            span {{opt}}
    .new-opt(x-ng-hide="!newOpt", x-ng-class="{selected: newOpt === selectedItem}")
        span(x-ng-if="newLabel") {{newLabel}}:
        span(x-ng-if="!newLabel") New:
        span {{newOpt}}